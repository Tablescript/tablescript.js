{
    "extends": "google",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "node": true
    },
    "plugins": [
        "standard"
    ],
    "rules": {
        "arrow-parens": ["error", "as-needed"],
        "max-len": ["error", 150],
        "object-curly-spacing": ["error", "always"],
        "require-jsdoc": 0
    }
}